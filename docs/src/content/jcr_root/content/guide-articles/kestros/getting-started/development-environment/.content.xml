<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0"
  jcr:primaryType="kes:GuideArticle">
  <jcr:content jcr:primaryType="nt:unstructured"
    jcr:title="Setting Up Your Development Environment"
    group="Getting Started"
    sling:resourceType="kestros/components/guides/pages/guide-article">
    <content jcr:primaryType="nt:unstructured"
      sling:resourceType="kestros/commons/components/content-area">
      <development-environment-container jcr:primaryType="nt:unstructured"
        sling:resourceType="kestros/commons/components/structure/container">
        <content-area jcr:primaryType="nt:unstructured"
          sling:resourceType="kestros/commons/components/content-area">
          <ide-heading jcr:primaryType="nt:unstructured"
            sling:resourceType="kestros/commons/components/content/heading"
            text="Setting up in Your IDE"
            level="h2"/>
          <intellij-heading jcr:primaryType="nt:unstructured"
            sling:resourceType="kestros/commons/components/content/heading"
            text="IntelliJ"
            level="h3"/>
          <intellij-text jcr:primaryType="nt:unstructured"
            sling:resourceType="kestros/commons/components/content/richtext"
            text="&lt;p&gt;To download IntelliJ, visit the &lt;a href=&quot;https://www.jetbrains.com/idea/&quot;&gt;official site&lt;/a&gt;.&lt;/p&gt;"/>
          <intellij-steps jcr:primaryType="nt:unstructured"
            sling:resourceType="kestros/commons/components/content/richtext"
            text="&lt;ol&gt;&lt;li&gt;Import project using Maven model.&lt;/li&gt;&lt;li&gt;Select &lt;code&gt;Import Maven project automatically&lt;/code&gt;.&lt;/li&gt;&lt;li&gt;Continue with wizard steps until complete.&lt;/li&gt;&lt;/ol&gt;"/>
          <!--          <eclipse-heading jcr:primaryType="nt:unstructured"-->
          <!--            sling:resourceType="kestros/commons/components/content/heading"-->
          <!--            text="Eclipse"-->
          <!--            level="h3"/>-->
          <!--          <eclipse-text jcr:primaryType="nt:unstructured"-->
          <!--            sling:resourceType="kestros/commons/components/content/richtext"-->
          <!--            text=""/>-->
          <gulp-watch-heading jcr:primaryType="nt:unstructured"
            sling:resourceType="kestros/commons/components/content/heading"
            text="Running Gulp Watch"
            level="h2"/>
          <gulp-watch-text jcr:primaryType="nt:unstructured"
            sling:resourceType="kestros/commons/components/content/richtext"
            text="&lt;p&gt;Your generated project comes with a &lt;code&gt;gulpfile.js&lt;/code&gt; file, which contains a gulp watch script for automatically uploading updated HTML, CSS and JS files to Kestros.&lt;/p&gt;"/>
          <node-install-heading jcr:primaryType="nt:unstructured"
            sling:resourceType="kestros/commons/components/content/heading"
            text="Installing Node.js, npm and gulp"
            level="h3"/>
          <node-install-text jcr:primaryType="nt:unstructured"
            sling:resourceType="kestros/commons/components/content/richtext"
            text="&lt;p&gt;To install Node.js and npm, visit the &lt;a href=&quot;https://nodejs.org/en/&quot;&gt;official download page&lt;/a&gt;.&lt;/p&gt;"/>
          <gulp-install-text jcr:primaryType="nt:unstructured"
            sling:resourceType="kestros/commons/components/content/text"
            text="After install Node.js and npm, run the following command from your project's root directory to install gulp:"/>
          <gulp-install-code jcr:primaryType="nt:unstructured"
            sling:resourceType="kestros/commons/components/content/code"
            text="npm install gulp gulp-util gulp-slang"/>
          <gulp-run-heading jcr:primaryType="nt:unstructured"
            sling:resourceType="kestros/commons/components/content/heading"
            text="Running Gulp Watch"
            level="h3"/>
          <gulp-run-text jcr:primaryType="nt:unstructured"
            sling:resourceType="kestros/commons/components/content/text"
            text="To run your gulp watch, run the following command from your project's root directory:"/>
          <gulp-run-code jcr:primaryType="nt:unstructured"
            sling:resourceType="kestros/commons/components/content/code"
            text="gulp watch"/>
          <gulp-code-alert jcr:primaryType="nt:unstructured"
            sling:resourceType="kestros/commons/components/content/alert"
            text="Only modified CSS, JS and HTML files can be uploading via the gulp watch.  New files and other file types require a maven install."
            variations="[alert-info]"/>


        </content-area>
      </development-environment-container>
    </content>
  </jcr:content>
</jcr:root>