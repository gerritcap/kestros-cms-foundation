<workspaceFilter version="1.0">

  <filter root="/" mode="update">
    <exclude pattern="/.*"/>
  </filter>
  <filter root="/libs" mode="update">
    <exclude pattern="/libs/.*"/>
  </filter>

  <filter root="/apps">
    <exclude pattern="/apps/.*"/>
  </filter>

  <filter root="/content/sites">
    <exclude pattern="/content/sites/.*"/>
  </filter>

  <filter root="/libs/kestros" mode="update">
    <exclude pattern="/libs/kestros/.*"/>
  </filter>

  <filter root="/libs/kestros/commons" mode="update">
    <exclude pattern="/libs/kestros/commons/.*"/>
  </filter>

  <filter
    root="/libs/kestros/commons/config/org.apache.sling.serviceusermapping.impl.ServiceUserMapperImpl.amended-kestros-resource-manager"
    mode="update"/>

  <filter root="/libs/kestros/commons/components/content-area">
    <exclude pattern="/libs/kestros/commons/components/content-area/.*"/>
  </filter>
  <filter root="/libs/kestros/commons/components/content-area/common" mode="replace"/>
  <filter root="/libs/kestros/commons/components/content-area/create" mode="replace"/>

  <filter root="/libs/kestros/commons/components/inherited-content-area">
    <exclude pattern="/libs/kestros/commons/components/inherited-content-area/.*"/>
  </filter>
  <filter root="/libs/kestros/commons/components/inherited-content-area/common" mode="replace"/>
  <filter root="/libs/kestros/commons/components/inherited-content-area/create" mode="replace"/>
  <filter root="/libs/kestros/commons/components/inherited-content-area/edit" mode="replace"/>
  <filter root="/libs/kestros/commons/components/inherited-content-area/delete" mode="replace"/>


  <filter root="/libs/kestros/commons/components/kestros-base-page">
    <exclude pattern="/libs/kestros/commons/components/kestros-base-page/.*"/>
  </filter>
  <filter root="/libs/kestros/commons/components/kestros-base-page/common" mode="replace"/>
  <filter root="/libs/kestros/commons/components/kestros-base-page/create" mode="replace"/>
  <filter root="/libs/kestros/commons/components/kestros-base-page/edit" mode="replace"/>
  <filter root="/libs/kestros/commons/components/kestros-base-page/delete" mode="replace"/>

  <filter root="/libs/kestros/commons/components/kestros-parent">
    <exclude pattern="/libs/kestros/commons/components/kestros-parent/.*"/>
  </filter>
  <filter root="/libs/kestros/commons/components/kestros-parent/common" mode="replace"/>
  <filter root="/libs/kestros/commons/components/kestros-parent/create" mode="replace"/>
  <filter root="/libs/kestros/commons/components/kestros-parent/edit" mode="replace"/>
  <filter root="/libs/kestros/commons/components/kestros-parent/delete" mode="replace"/>

  <filter root="/etc/ui-frameworks">
    <exclude pattern="/etc/ui-frameworks/.*"/>
  </filter>

  <filter root="/etc/vendor-libraries">
    <exclude pattern="/etc/vendor-libraries/.*"/>
  </filter>

  <filter root="/var/cache/pages"/>

  <filter root="/apps/kestros/cache/compiled-htl-templates"/>

</workspaceFilter>
